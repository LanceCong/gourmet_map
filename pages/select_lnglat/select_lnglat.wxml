
<map id="map4select"
 hidden="{{hide ? true : false}}"
 longitude="{{longitude}}" latitude="{{latitude}}" 
 markers="{{markers}}"
 scale="20" 
 style="width:{{map_width}}px;height:{{map_height}}px"
 bindregionchange="regionchange"
 controls="{{controls}}">
</map>

<view hidden="{{hide ? true : false}}" class="center">
    <view style="height:8px"></view>
    <text>移动地图中心修改位置</text>
    <button id="btn_complete" type="primary" bindtap="editPos">完成</button>
</view>

<view hidden="{{show ? false : true}}">
    <view style="padding: 10px" class="center">
        <view style="height:8px"></view>
        <text>已添加{{pics_number}}/9张图片</text>
        <view>
            <button type="primary" bindtap="add_pics">添加图片</button>
             <view style="height:8px"></view>
        </view>

        <view wx:for="{{urls}}">
            <image bindtap="preview" mode="aspectFill" style="width:{{img_width}}px;height:{{img_height}}px" class="img" src="{{item}}"></image>
        </view>

        <view hidden="{{show_headurl ? false:true}}">
            <text class="bold">选一张作为首页图（点击图片切换）：</text>
            <image bindtap="checkout" mode="aspectFill" src="{{headurl}}"></image>
        </view>

    </view>

    <view style="padding:0px 10px">
        <view style="height:8px"></view>
        <text class="bold">这地方叫什么？</text>
        <input bindinput="confirmTitle" maxlength="140" style="height:2em" class="input" />
        <text class="bold">简单描述一下：</text>
        <textarea bindinput="confirmDesc" maxlength="500" class="input" />
    </view>

    <view class="center">
        <view style="height:8px"></view>
        <button bindtap="add_gourmet" style="width:5em" type="primary">提交</button>
        <view style="height:8em"></view>
    </view>
</view>