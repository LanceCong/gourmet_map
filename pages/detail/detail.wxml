<view class="title">{{gourmet.title}}</view>

<view class="center">

<swiper style="height:{{img_height}}px" indicator-dots="{{indicatorDots}}"
  bindtap="preview"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{gourmet.urls}}">
    <swiper-item>
      <image src="{{item}}" mode="aspectFill" class="swiper-image" width="{{img_width}}" height="{{img_height}}"/>
    </swiper-item>
  </block>
</swiper>

</view>

<view style="padding:10px">
    <view class="description">{{gourmet.description}}</view>
</view>

<!--comments-->
<view style="padding:10px">

    <textarea placeholder="输入你的评论" auto-height="true" maxlength="500" 
     bindinput="inputComment"
    class="comment_area" value="{{textarea_content}}" />
    <view style="height:10px"></view>
    <button bindtap="addComment">提交评论</button>

    <view class="comment_layout" wx:for="{{comments}}">
    <image id="avatar" src="{{item.avatar}}"></image>
    <text class="comment">{{item.nickname}}</text>
    <text class="comment">{{item.content}}</text>
    <br/>
    <text class="comment">{{item.create_time_tag}}</text>
    </view>

    <button hidden="{{hide_loadmore? true:false}}" type="default" bindtap="onLoadMore">加载更多</button>
    
</view>

<view bindtap="openLocation" id="openLocation">
    <image id="img_openlocation" src="../../imgs/ic_map.png"></image>
    <text style="vertical-align: middle">打开位置</text>
</view>