<view style="padding:10px">
  <view class="title">{{gourmet.title}}</view>
</view>

<view class="center">

<swiper indicator-dots="{{indicatorDots}}"
  bindtap="preview"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{gourmet.urls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="{{img_width}}" height="{{img_height}}"/>
    </swiper-item>
  </block>
</swiper>

</view>

<view style="padding:10px">
    <view class="description">{{gourmet.description}}</view>
</view>

<!--comments-->
<view style="padding:10px">

    <textarea placeholder="输入你的评论" auto-height="true" maxlength="500" 
     bindinput="inputComment"
    class="comment_area" value="{{textarea_content}}" />
    <view style="height:10px"></view>
    <button bindtap="addComment">提交评论</button>

    <view class="comment" wx:for="{{gourmet.comments}}">
    {{index+1}} 楼<image id="avatar" src="{{gourmet.user_avatar}}"></image>
    <text>：{{item.comment}}</text>
    </view>
    
</view>