
<view class="header">
  <view id="open_map" bindtap="showMap" class="tab">打开地图</view>
  <view id="add_gourmet" bindtap="addPoint" class="tab">添加美食</view>
</view>

<scroll-view id="gourmet_list" scroll-y="true" style="width:100%;height: 800px;" bindscrolltolower="loadMore" scroll-top="100">
  
  <view wx:for="{{gourmets}}">
    <view style="height:1em;"/>
  
    <view>
      <text class="itemtext_title">{{item.title}}</text>
      <text class="create_time">创建时间：{{item.create_time_tag}}</text>
      <image bindtap="gotoDetail" data-id="{{item.objectId}}" class="img" mode="aspectFill"
      src="{{item.head_url}}"></image>
      <text class="address">地址：{{item.address}}</text>
    </view>

    <view class="line"/>

  </view>

<!--gourmet_list-->
</scroll-view>

<view style="height:2.8em;"/>

