
<view class="header">
  <view id="open_map" bindtap="showMap" class="tab">打开地图</view>
  <view id="add_gourmet" bindtap="addPoint" class="tab">添加美食</view>
</view>

<view style="height:2.8em;"></view>

<view id="gourmet_list">
  
<view wx:for="{{gourmets}}">

  <view wx:if="{{index > 0}}">
    <view style="height:1em;"/>
  </view>
  
  <view>
    <text class="itemtext_title">{{item.title}}</text>
  </view>

  <image bindtap="gotoDetail" data-id="{{item.objectId}}" class="img" mode="aspectFill"
   src="{{item.head_url}}"></image>

  <view class="footer">
    <text class="itemtext_footer">{{item.user_nickname}}  </text>
    <text class="itemtext_footer">  评论: {{item.comments.length}}</text>
    <text class="itemtext_footer item_create_time">{{item.createAt}}</text>
  </view>

  <view class="line"/>

</view>

<!--gourmet_list-->
</view>